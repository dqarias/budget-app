<% icon_categories =[
    {
      icon: 'home',
      title: 'home',
    },
    {
      icon: 'transportation',
      title: 'Transportation',
    }
  ] %>

<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <ul>
    <% icon_categories.each do |icon_category|%>
      <li>
        <%= form.radio_button :icon, icon_category[:icon] %> 
        <img src="<%=asset_path("#{icon_category[:icon]}.png") %>" alt=<%=icon_category[:title]%>>
      </li>
       <% end %>
    </ul>

  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
