
<div class="form">
<div class="form__container">
<h2>Log in</h2>
<p class="form-text">Welcome back! Please enter you details</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form__field">
    <%= f.label :email, class: 'form__label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form__input' %>
  </div>

  <div class="form__field">
    <%= f.label :password, class: 'form__label'%><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'form__input' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form__field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form__btn">
    <%= f.submit "Log in", :class => 'btn-solid' %>
  </div>
<% end %>
</div>
<div class="form__links">
<%= render "devise/shared/links" %>
</div>
</div>